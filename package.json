{
  "name": "hashmodals",
  "version": "1.0.0",
  "description": "A tiny library for creating hash-based modals",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "watch:styles": "sass --watch ./src:./lib",
    "styles": "npm run watch:styles",
    "webpack:dev": "npx webpack --config webpack.config.js & npm run styles"
  },
  "keywords": [
    "modals",
    "hash",
    "modal",
    "popups"
  ],
  "author": "Henry McIntosh",
  "license": "MIT",
  "browserslist": "> 0.25%, not dead",
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.34.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.0.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-typescript": "^7.0.0",
    "node-sass": "^4.14.1",
    "sass-loader": "^9.0.2",
    "source-map-loader": "^1.0.1",
    "style-loader": "^1.2.1",
    "ts-loader": "^8.0.1",
    "typescript": "^3.9.7",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.12"
  }
}
